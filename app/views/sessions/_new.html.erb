<% form_remote_tag :url => {:controller => 'sessions', :action => 'create'}, :html => {:class => 'login_form'} do -%>
	<p class="no-border"><strong>Please enter credentials</strong></p>
	<% unless flash.now[:notice].blank? %>
		<p class="no-border" style="color:red;"><strong><%= flash.now[:notice]%></strong></p>
	<% end %>
	<p>	
		<label for="login">Your username</label><br />
		<%= text_field_tag 'login', @login, :tab_index => 2 %>
	</p>
	<p>
		<label for="password">Your password</label><br />
		<%= password_field_tag 'password', nil %>		
	</p>	
	<p class="no-border">
		<input class="button" type="submit" value="Submit" tabindex="5" />
		&nbsp;&nbsp;&nbsp;&nbsp;
		<%= check_box_tag 'remember_me', '1', @remember_me %>
		<%= label_tag 'remember_me', 'Remember me'%> 
		<span class="float-right">Not registered? &nbsp;&nbsp;<%= link_to 'Sign up!', signup_path %></span>
	</p>
<% end %>