<h3 id="wishlist_count" style="display:inline"><%= link_to current_user.wishlist_heading, home_path %></h3>
<%= link_to_function 'New', "$j('#new_wishlist_form').show(200);$j(this).hide();$j('#cancel_new_wishlist').show();$j('#new_wishlist_form input#wishlist_name').val('')", 
											:class => 'button', :id => 'new_wishlist_button' %>
<%= link_to_function 'Cancel', "$j('#new_wishlist_form').hide(100);$j(this).hide();$j('#new_wishlist_button').show();$j('#wishlist_error').html('')", 
											 :id => 'cancel_new_wishlist',:style => 'display:none' %>
<% form_remote_tag :url => {:controller => 'wishlists', 
									 :action => 'create',
									 :prev_controller => params[:controller],
									 :prev_action => params[:action]}, 
									 :html => {
									 	 :id => 'new_wishlist_form',
										 :style => 'display:none'} do %>
	<span style="color:red" id="wishlist_error"></span>
	<%= text_field_tag 'wishlist[name]' %>
	<%= submit_tag 'Create', :class => 'button clear right'%>
<% end %>
<ul id="wishlists_side">
	<% current_user.wishlists.each do |list| %>
		<%= render :partial => "wishlists/li_side_menu", 
							 :locals => {
									:list => list,
									:current => @wishlist && (@wishlist.id == list.id) }%>
	<% end %>
</ul>